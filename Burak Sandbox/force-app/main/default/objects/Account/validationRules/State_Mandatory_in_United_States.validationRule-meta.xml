<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>State_Mandatory_in_United_States</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT( $Permission.Override_Validation ),
BillingCountry = &apos;United States&apos;, 
ISBLANK(BillingState))</errorConditionFormula>
    <errorDisplayField>BillingState</errorDisplayField>
    <errorMessage>Please enter the State for Accounts in the United States</errorMessage>
</ValidationRule>
