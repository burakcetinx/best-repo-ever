<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Follow_Up_Date</fullName>
    <active>true</active>
    <description>If Follow-Up = True, Follow-UP date can&apos;t be blank</description>
    <errorConditionFormula>AND
(
Follow_Up__c = TRUE,
ISBLANK( Follow_Up_Date__c )
)</errorConditionFormula>
    <errorDisplayField>Follow_Up_Date__c</errorDisplayField>
    <errorMessage>Please choose a Follow-Up Date.</errorMessage>
</ValidationRule>
