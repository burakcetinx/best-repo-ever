<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Source_is_Supplier_Referral</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL(AccountSource, &quot;Supplier Referral&quot;), 
ISBLANK(  Lead_Referral__c)
)</errorConditionFormula>
    <errorMessage>Please choose the Supplier.
(how to: press on cancel, then choose the &quot;Referral By&quot; on the right hand side)</errorMessage>
</ValidationRule>
